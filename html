  <div class="container">
    <h1>Convert kml kmz to UTM</h1>

    <h3>إدخال يدوي</h3>
    <input type="number" id="lat" placeholder="خط العرض (Latitude)">
    <input type="number" id="lon" placeholder="خط الطول (Longitude)">
    
    <select id="zone">
      <option value="">اختر زون</option>
      <!-- توليد كل الزونات 1 → 60 -->
      <script>
        for (let i=1; i<=60; i++) {
          document.write(<option value="${i}">Zone ${i}</option>);
        }
      </script>
    </select>
    <button onclick="convertManual()">تحويل</button>

    <h3>رفع ملف KML/KMZ</h3>
    <input type="file" id="fileInput" accept=".kml,.kmz">
    <button onclick="convertFile()">تحويل الملف</button>

    <div id="output" style="margin-top:20px; font-weight:bold;"></div>
