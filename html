  <script>
    function convertManual() {
      const lat = parseFloat(document.getElementById("lat").value);
      const lon = parseFloat(document.getElementById("lon").value);
      const zone = document.getElementById("zone").value;

      if (isNaN(lat) || isNaN(lon) || !zone) {
        document.getElementById("output").innerText = "⚠ من فضلك أدخل القيم واختر الزون.";
        return;
      }

      const utmProj = +proj=utm +zone=${zone} +datum=WGS84 +units=m +no_defs;
      const utm = proj4(utmProj, [lon, lat]);
      document.getElementById("output").innerText =
        ✅ UTM: X = ${utm[0].toFixed(3)}, Y = ${utm[1].toFixed(3)}, Zone ${zone};
    }

    function convertFile() {
      const file = document.getElementById("fileInput").files[0];
      const zone = document.getElementById("zone").value;

      if (!file || !zone) {
        document.getElementById("output").innerText = "⚠ من فضلك اختر ملف وحدد الزون.";
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        const text = e.target.result;
        const regex = /<coordinates>(.*?)<\/coordinates>/g;
        let match, results = [];
        const utmProj = +proj=utm +zone=${zone} +datum=WGS84 +units=m +no_defs;

        while ((match = regex.exec(text)) !== null) {
          const coords = match[1].trim().split(" ");
          coords.forEach(pair => {
            if (pair) {
              const [lon, lat] = pair.split(",").map(Number);
              const utm = proj4(utmProj, [lon, lat]);
              results.push(X=${utm[0].toFixed(3)}, Y=${utm[1].toFixed(3)});
            }
          });
        }
        document.getElementById("output").innerText = "✅ النتائج:\n" + results.join("\n");
      };
      reader.readAsText(file);
    }
  </script>
